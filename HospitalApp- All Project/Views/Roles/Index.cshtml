@model IEnumerable<AppRole>

    <a class="btn btn-primary" asp-action="Create">Rol Oluştur</a>
    <hr>
    
    <table class="table table-sm table-bordered">
        <tr>
            <th>Id</th>
            <th>Rol Adı</th>
            <th>Kullanıcılar</th>
            <th style="width: 150px;">İşlemler</th>
        </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">Rol Eklenmedi</td>
                </tr>
            }
    
        @foreach(var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td asp-role-users = "@role.Id">
                   
                </td>
                <td>
                    <form method="post">
                        <a class="btn btn-primary btn-sm" asp-controller="Roles" asp-action="Edit" asp-route-id="@role.Id">Düzenle</a>
                        <button type="submit" class="btn btn-primary btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </table>
    